    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const generateLink = document.getElementById('generate-link');
        const generateButton = document.getElementById('generate-button');
        const audioPlayer = document.getElementById('audio-player');
        const playIcon = document.getElementById('play-icon'); // Added line
        const pauseIcon = document.getElementById('pause-icon'); // Added line

        generateLink.addEventListener('click', async (event) => {
            event.preventDefault();
            generateButton.click();
            await new Promise(resolve => {
                audioPlayer.addEventListener('canplay', resolve);
            });
            audioPlayer.play();
            playIcon.style.display = 'none';
            pauseIcon.style.display = 'inline-block';
        });
    });
</script>
<script>
    function myCopy() {
        var dummy = document.createElement('input'),
            text = window.location.href;
        document.body.appendChild(dummy);
        dummy.value = text;
        dummy.select();
        document.execCommand('copy');
        document.body.removeChild(dummy);
    }
</script>
<script>
    const runningText = document.querySelector('.running-text');

    runningText.addEventListener('mouseover', () => {
        runningText.style.animationPlayState = 'paused';
    });

    runningText.addEventListener('mouseout', () => {
        runningText.style.animationPlayState = 'running';
    });
</script>

